sudo su && apt upgrade -y && apt update -y && sudo apt install apt-transport-https curl && sudo curl -fsSLo /usr/share/keyrings/brave-browser-archive-keyring.gpg https://brave-browser-apt-release.s3.brave.com/brave-browser-archive-keyring.gpg && echo "deb [signed-by=/usr/share/keyrings/brave-browser-archive-keyring.gpg arch=amd64] https://brave-browser-apt-release.s3.brave.com/ stable main"|sudo tee /etc/apt/sources.list.d/brave-browser-release.list && sudo apt update && sudo apt install brave-browser && gsettings set org.gnome.shell favorite-apps "$(gsettings get org.gnome.shell favorite-apps | sed s/.$//), 'brave-browser.desktop\']" && cp Chrome.png /usr/share/applications/ && cd /usr/share/applications/ && sed -i 's/Icon=brave-browser/Icon=Chrome.png/g' brave-browser.desktop && sed -i 's/Name=Brave Web Browser/Name=Chrome/' brave-browser.desktop && apt purge google-chrome-stable
